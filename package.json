{
  "name": "whatsapp-activity-monitor",
  "version": "2.0.0",
  "type": "module",
  "description": "Ferramenta de monitoramento de atividade via WhatsApp usando análise de RTT - Demonstra vulnerabilidades de privacidade",
  "main": "dist/index.js",
  "keywords": [
    "whatsapp",
    "signal",
    "privacy",
    "security",
    "research",
    "tracking",
    "rtt",
    "device-activity",
    "proof-of-concept"
  ],
  "author": "Gommzy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/brunosillvax/-WhatsApp-Activity-Monitor.git"
  },
  "bugs": {
    "url": "https://github.com/brunosillvax/-WhatsApp-Activity-Monitor/issues"
  },
  "homepage": "https://github.com/brunosillvax/-WhatsApp-Activity-Monitor#readme",
  "scripts": {
    "build": "tsc",
    "start": "npx tsx src/index.ts",
    "start:server": "npm run start:signal-api || echo Signal API não disponível, continuando sem Signal... && npx tsx src/server.ts",
    "start:server:whatsapp-only": "npx tsx src/server.ts",
    "start:signal-api": "npx tsx src/scripts/init-signal.ts",
    "start:client": "cd client && npm start",
    "dev": "npm run start:server",
    "postinstall": "cd client && npm install"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "cors": "^2.8.5",
    "express": "^5.0.1",
    "pdf-parse": "^1.1.1",
    "pino": "^10.1.0",
    "qrcode-terminal": "^0.12.0",
    "socket.io": "^4.8.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/ws": "^8.18.1",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  },
  "private": true
}
